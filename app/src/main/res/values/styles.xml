<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:button">@style/RobotoButtonStyle</item>
        <item name="editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="checkboxStyle">@style/RobotoCheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RobotoRadioButtonStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="RobotoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RobotoButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="RobotoEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="RobotoCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="RobotoRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@drawable/popup_background</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">false</item>-->
    </style>

    <style name="textView_title_list" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_black_transparent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/redcolor</item>
    </style>

</resources>
