<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="5dp"
                android:background="@color/attach"
                android:id="@+id/stage_event_image"
                android:scaleType="fitXY"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/tennis_banner_event"/>
            <LinearLayout
                android:id="@+id/datelayout"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/stage_event_name"
                    android:textSize="18dp"
                    android:text="Bala"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:layout_below="@+id/stage_event_name"
                    android:id="@+id/stage_event_descrition"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:text="Lorem Ipsum is simply  text of the printing and typesetting industry. Lorem Ipsum has been the industry's.Lorem Ipsum is simply  text of the printing and typesetting industry. Lorem Ipsum has been the industry's."
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_date_layout"
            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_alignParentStart="true"
            android:background="@color/logo_gray"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="DÃ©but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_date_layout_1"

            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_toRightOf="@+id/start_date_layout"
            android:background="@color/white"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_event_date"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="25 Dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/place_event_date"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="25 Dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_date_layout"
            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_toLeftOf="@+id/end_date_layout_1"
            android:background="@color/logo_gray"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="Fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_date_layout_1"
            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/end_event_date"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="25 Dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
</LinearLayout>
