<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/reserve_dialog_heading"
            android:layout_gravity="center"
            android:textColor="@color/whitecolor"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Approve form"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <com.tech.cloudnausor.ohmytennispro.utils.CircleImageView
        android:visibility="gone"
        android:elevation="2dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_user"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_margin="10sp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nom "/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Type de cours "/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialog_user_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Temps &amp; Date "/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialog_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layout_stage"
            android:layout_marginTop="10sp"
            android:layout_margin="-10dp"
            android:background="@drawable/rectangle_counter"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Nom de societe / Personnes"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diag_com_name"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="E-mail"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diag_com_email"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Numbre de Telephone"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diag_phone"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout            android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Date"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/diag_com_date"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/level_view"
                android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Level"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/diag_com_level"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/emplacement_view"
                android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Emplacement"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/diag_com_place"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/postal_view"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Code Postal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/diag_com_postal"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="10sp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="Numbre de Personne"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text=": "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/diag_com_no_person"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/discout_layout"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Prix\n(Indiquer le prix en euros) "/>

            <TextView
                android:layout_gravity="bottom"
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/dialog_dis_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_close"
            android:textAllCaps="true"
            android:textColor="@color/whitecolor"
            android:text="Proche"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_set_status"
            android:textAllCaps="true"
            android:textColor="@color/whitecolor"
            android:text=""
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>


</LinearLayout>