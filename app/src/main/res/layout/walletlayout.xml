<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="3dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp"
                android:src="@drawable/profile_user"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <RelativeLayout
                android:background="@color/transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/coach_name"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:text="KEVIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textAlignment="textEnd"
                    android:layout_below="@+id/coach_name"
                    android:id="@+id/coach_address"
                    android:layout_alignParentRight="true"
                    android:text="6 Rue de Dijon, 75012 Paris, France"
                    android:textColor="@color/white"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@color/transparent"
                    android:elevation="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/wallet_amount"
                    android:layout_gravity="right|bottom"
                    android:text="Amount"
                    android:textColor="#FF9A15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:id="@+id/wallet_amount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="â‚¬ 20000"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

</LinearLayout>