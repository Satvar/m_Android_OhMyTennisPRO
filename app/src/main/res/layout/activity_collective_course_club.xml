<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:visibility="gone"
        android:id="@+id/toolbar_indi"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back_icon"
            android:tint="@color/whitecolor"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textColor="@color/whitecolor"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Cour collectif club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.collectivecourse.CollectiveCourseClubActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/blackcolor"
        android:text="@string/make_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:text="@string/star"
            android:textColor="@color/redcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:visibility="gone"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:textSize="17sp"
        android:layout_height="35dp"
        android:textColor="@color/whitecolor"
        android:text="Gerer"
        android:background="@drawable/loginbutton"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/blackcolor"
                    android:layout_marginBottom="0dp"
                    android:text="Club Nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/star"
                    android:textColor="@color/redcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_name_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_name"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Club nom"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/blackcolor"
                android:layout_marginBottom="0dp"
                android:text="@string/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/star"
                android:textColor="@color/redcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_description_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_description"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="@string/description"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/blackcolor"

                android:layout_marginBottom="0dp"
                android:text="@string/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/star"
                android:textColor="@color/redcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:id="@+id/club_price_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_price"
                    android:scrollbars="vertical"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="@string/price"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/blackcolor"
                    android:layout_marginBottom="0dp"
                    android:text="Nombre de personnes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/star"
                    android:textColor="@color/redcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_max_person_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_max_person"
                    android:scrollbars="vertical"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Nombre de personnes"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/blackcolor"
                    android:layout_marginBottom="0dp"
                    android:text="@string/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/star"
                    android:textColor="@color/redcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_location_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_location"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="@string/location"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/blackcolor"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="-6dp"
                        android:text="@string/r_post_code_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/star"
                        android:textColor="@color/redcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/club_postalcode_error"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/ErrorText"
                    app:errorEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/club_postalcode"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:maxLength="5"
                        android:inputType="number"
                        android:hint="@string/r_post_code_hint"
                        android:drawableTint="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/blackcolor"
                android:text="@string/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/blackcolor"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:text="@string/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/star"
                android:textColor="@color/redcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:src="@drawable/file_upload"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp" />
        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/send_photo"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/blackcolor"

                android:layout_marginBottom="0dp"
                android:text="@string/transport_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/star"
                android:textColor="@color/redcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/club_car"
                        android:text="@string/transport_1"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/club_bike"
                        android:text="@string/transport_3"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/club_train"
                        android:text="@string/transport_2"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/club_bus"
                        android:text="@string/transport_4"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:visibility="gone"
                android:textSize="15sp"
                android:drawableRight="@drawable/ic_spinner_arrow_down_black_24dp"
                android:textColor="#000000"
                android:enabled="false"
                android:hint="@string/transport_hint"
                android:drawableTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/blackcolor"
                    android:layout_marginBottom="0dp"
                    android:text="Technique fournie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/star"
                    android:textColor="@color/redcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_technic_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_technic"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="Technique fournie"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/blackcolor"
                    android:layout_marginBottom="0dp"
                    android:text="@string/video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/star"
                    android:textColor="@color/redcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/club_video_error"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:errorEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/club_video"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:hint="@string/embedurl"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/blackcolor"
            android:text="@string/select_the_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
        android:text="@string/star"
        android:textColor="@color/redcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/club_commission"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:checked="true"
                android:text="@string/commission"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/clubAvaibility"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/Add_club_course"
            android:textColor="@color/whitecolor"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="Ajouter Cours "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/redcolor"
                android:text="@string/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:text="Champs obligatoires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15sp"
            android:id="@+id/save_button_hide_show"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="true"
                android:id="@+id/club_cancel"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:text="@string/CCANCEL"
                android:textColor="@color/whitecolor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cancelbutton"/>
            <Button
                android:id="@+id/club_save"
                android:textAllCaps="true"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/whitecolor"
                android:text="@string/save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/loginbutton"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>